#:kivy 1.11.1
#:include style.kv

<CalculatorScreen>:
    Widget:
        size_hint: None, None
        size: root.width, root.height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size:  self.size
                pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 50
            text: app.current_equation
            color: (0, 0, 0, 1)
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'right': 0.95}
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size: self.size
                background_normal: 'graphics/red_button_up.png'
                background_down: 'graphics/red_button_down.png'
                text: "Del"
                on_press: app.current_equation = app.current_equation[:-1]
            Button:
                size: self.size
                background_normal: 'graphics/red_button_up.png'
                background_down: 'graphics/red_button_down.png'
                text: "Clr"
                on_press: app.current_equation = ""
            Button:
                size: self.size
                background_normal: 'graphics/green_button_up.png'
                background_down: 'graphics/green_button_down.png'
                text: "="
                on_press: root.calculate()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size: self.size
                text: "7"
                on_press:
                    app.last_character = "7"
                    root.type_check()
            Button:
                size: self.size
                text: "8"
                on_press:
                    app.last_character = "8"
                    root.type_check()
            Button:
                size: self.size
                text: "9"
                on_press:
                    app.last_character = "9"
                    root.type_check()
            Button:
                size: self.size
                background_normal: 'graphics/green_button_up.png'
                background_down: 'graphics/green_button_down.png'
                text: "+"
                on_press:
                    app.last_character = "+"
                    root.type_check()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size: self.size
                text: "4"
                on_press:
                    app.last_character = "4"
                    root.type_check()
            Button:
                size: self.size
                text: "5"
                on_press:
                    app.last_character = "5"
                    root.type_check()
            Button:
                size: self.size
                text: "6"
                on_press:
                    app.last_character = "6"
                    root.type_check()
            Button:
                size: self.size
                background_normal: 'graphics/green_button_up.png'
                background_down: 'graphics/green_button_down.png'
                text: "-"
                on_press:
                    app.last_character = "-"
                    root.type_check()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size: self.size
                text: "1"
                on_press:
                    app.last_character = "1"
                    root.type_check()
            Button:
                size: self.size
                text: "2"
                on_press:
                    app.last_character = "2"
                    root.type_check()
            Button:
                size: self.size
                text: "3"
                on_press:
                    app.last_character = "3"
                    root.type_check()
            Button:
                size: self.size
                background_normal: 'graphics/green_button_up.png'
                background_down: 'graphics/green_button_down.png'
                text: "*"
                on_press:
                    app.last_character = "*"
                    root.type_check()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size: self.size
                text: "0"
                on_press:
                    app.last_character = "0"
                    root.type_check()
            Button:
                size: self.size
                text: "."
                on_press:
                    app.last_character = "."
                    root.type_check()
            Button:
                size: self.size
                text: "(-)"
                on_press:
                    app.last_character = "-"
                    root.type_check()
            Button:
                size: self.size
                background_normal: 'graphics/green_button_up.png'
                background_down: 'graphics/green_button_down.png'
                text: "/"
                on_press:
                    app.last_character = "/"
                    root.type_check()
